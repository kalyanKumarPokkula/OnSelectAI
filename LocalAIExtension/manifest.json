{
	"manifest_version": 3,
	"name": "OnSelectAI",
	"version": "1.0.0",
	"description": "AI-powered text analysis and processing using local llms",
	"permissions": ["contextMenus", "storage", "activeTab", "windows"],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "/assets/icon-16.png",
			"48": "/assets/icon-48.png",
			"128": "/assets/icon-128.png"
		}
	},
	"icons": {
		"16": "/assets/icon-16.png",
		"48": "/assets/icon-48.png",
		"128": "/assets/icon-128.png"
	},
	"background": {
		"service_worker": "background.js",
		"type": "module"
	}
}
